// Effect mixins for consistent animations and shadows
hover-lift($offset = -2px, $shadow = $shadow-elevated)
  &:hover
    transform translateY($offset)
    box-shadow $shadow

micro-lift($offset = -1px)
  &:hover
    transform translateY($offset)

button-ripple()
  position relative
  overflow hidden
  
  &::after
    content ""
    position absolute
    top 50%
    left 50%
    width 0
    height 0
    border-radius 50%
    background rgba(255, 255, 255, 0.06)
    transform translate(-50%, -50%)
    transition width 0.4s, height 0.4s
  
  &:active::after
    width 160px
    height 160px

focus-ring($color = $arch-blue)
  &:focus
    outline 2px solid $color
    outline-offset 2px
    border-radius $border-radius-sm