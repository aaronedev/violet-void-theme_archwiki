@import '../variables/colors'
@import '../variables/layout'

// Wiki tables
.wikitable
  background-color $base
  color $light
  margin 1em 0
  border none
  border-radius $border-radius-md
  overflow hidden
  box-shadow $shadow-subtle
  border-collapse separate
  border-spacing 0
  
  > tr > th,
  > * > tr > th
    background linear-gradient(135deg, $darker, rgba($arch-blue, 0.04))
    text-align center
    font-weight 600
    letter-spacing 0.02em
    color $lighter
  
  > tr > th,
  > tr > td,
  > * > tr > th,
  > * > tr > td
    border 1px solid $border-subtle
    padding 0.75em 1em
    transition background-color $transition-fast
  
  tr:hover td
    background-color rgba($arch-blue, 0.02)